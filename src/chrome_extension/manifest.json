{
	"name": "maths2Clipboard",
	"description": "Easily type maths, and then copy it as a picture to use wherever you want.",
	"version": "1.0",
	"manifest_version": 3,
	"permissions": ["storage", "scripting"],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "/images/icon16.png",
			"32": "/images/icon32.png",
			"48": "/images/icon48.png",
			"128": "/images/icon128.png"
		}
	},
	"commands": {
		"_execute_action": {
			"suggested_key": {
				"default": "Ctrl+Shift+1",
				"mac": "Command+Shift+1"
			}
		}
	},
	"icons": {
		"16": "/images/icon16.png",
		"32": "/images/icon32.png",
		"48": "/images/icon48.png",
		"128": "/images/icon128.png"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	}
}
